<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="camp7506.assignment1.cardgame24.PracticeModeActivity"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/icon_practise"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="3dp"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/mh" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView"
        android:src="@drawable/icon_tick"
        android:layout_alignBottom="@+id/textView"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/output"
        android:textSize="25dp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_below="@+id/btn_equal"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Win:"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="false"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignStart="@id/imageView2"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add"
        android:src="@drawable/btn_add"
        android:background="#ffffffff"
        android:clickable="true"
        android:layout_alignTop="@+id/pos3"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_minus"
        android:layout_below="@+id/btn_add"
        android:layout_alignStart="@+id/btn_add"
        android:layout_marginTop="8dp"
        android:src="@drawable/btn_minus"
        android:background="#ffffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_multiply"
        android:src="@drawable/btn_multiply"
        android:background="#ffffffff"
        android:layout_below="@+id/btn_minus"
        android:layout_alignStart="@+id/btn_minus"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_divide"
        android:layout_below="@+id/btn_multiply"
        android:layout_alignStart="@+id/btn_multiply"
        android:layout_marginTop="8dp"
        android:src="@drawable/btn_divide"
        android:background="#ffffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_equal"
        android:layout_below="@+id/btn_divide"
        android:layout_alignStart="@+id/btn_divide"
        android:src="@drawable/btn_equal"
        android:background="#ffffffff"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_right"
        android:layout_toStartOf="@+id/btn_equal"
        android:src="@drawable/btn_right"
        android:background="#ffffffff"
        android:layout_alignBottom="@+id/btn_equal"
        android:layout_marginRight="6dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_left"
        android:layout_alignBottom="@+id/btn_right"
        android:layout_toStartOf="@+id/btn_right"
        android:src="@drawable/btn_left"
        android:background="#ffffffff"
        android:layout_marginRight="6dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_clr"
        android:layout_alignBottom="@+id/btn_left"
        android:layout_toStartOf="@+id/btn_left"
        android:src="@drawable/btn_clr"
        android:background="#ffffffff"
        android:layout_marginRight="6dp"
        android:clickable="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_rec"
        android:layout_alignBottom="@+id/btn_clr"
        android:layout_toStartOf="@+id/btn_clr"
        android:src="@drawable/btn_rec"
        android:background="#ffffffff"
        android:layout_marginRight="6dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pos1"
        android:src="@drawable/pre"
        android:background="#ffffffff"
        android:layout_above="@+id/btn_right"
        android:layout_toStartOf="@+id/btn_multiply"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="6dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pos2"
        android:layout_alignBottom="@+id/pos1"
        android:layout_alignEnd="@+id/btn_clr"
        android:src="@drawable/pre"
        android:background="#ffffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pos3"
        android:src="@drawable/pre"
        android:background="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_add"
        android:layout_marginRight="6dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pos4"
        android:src="@drawable/pre"
        android:background="#ffffffff"
        android:layout_alignTop="@+id/pos3"
        android:layout_toStartOf="@+id/btn_left"
        android:layout_marginRight="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mTextField"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
