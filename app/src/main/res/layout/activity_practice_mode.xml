<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="camp7506.assignment1.cardgame24.PracticeModeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/icon_practise"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="3dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/MH" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/output"
        android:textSize="25dp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:src="@drawable/btn_add"
        android:background="#ffffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_minus"
        android:layout_below="@+id/btn_add"
        android:layout_alignStart="@+id/btn_add"
        android:layout_marginTop="6dp"
        android:src="@drawable/btn_minus"
        android:background="#ffffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_plus"
        android:src="@drawable/btn_X"
        android:background="#ffffffff"
        android:layout_below="@+id/btn_minus"
        android:layout_alignStart="@+id/btn_minus"
        android:layout_marginTop="6dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_divide"
        android:layout_below="@+id/btn_plus"
        android:layout_alignStart="@+id/btn_plus"
        android:layout_marginTop="6dp"
        android:src="@drawable/btn_division"
        android:background="@drawable/btn_division" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_equal"
        android:layout_below="@+id/btn_divide"
        android:layout_alignStart="@+id/btn_divide"
        android:src="@drawable/btn_equal"
        android:background="#ffffffff"
        android:layout_marginTop="6dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_right"
        android:layout_toStartOf="@+id/btn_equal"
        android:src="@drawable/btn_right"
        android:background="#ffffffff"
        android:layout_alignBottom="@+id/btn_equal"
        android:layout_marginRight="6dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_left"
        android:layout_alignBottom="@+id/btn_right"
        android:layout_toStartOf="@+id/btn_right"
        android:src="@drawable/btn_left"
        android:background="#ffffffff"
        android:layout_marginRight="6dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_clr"
        android:layout_alignBottom="@+id/btn_left"
        android:layout_toStartOf="@+id/btn_left"
        android:src="@drawable/btn_CLR"
        android:background="#ffffffff"
        android:layout_marginRight="6dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_rec"
        android:layout_alignBottom="@+id/btn_clr"
        android:layout_toStartOf="@+id/btn_clr"
        android:src="@drawable/btn_REC"
        android:background="#ffffffff"
        android:layout_marginRight="6dp" />

</RelativeLayout>
