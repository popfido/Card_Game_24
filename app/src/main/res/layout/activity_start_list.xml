<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="camp7506.assignment1.cardgame24.startList">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_single"
            android:background="#ffffffff"
            android:src="@drawable/mode_single"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:onClick="onClick_practise"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_challenge"
            android:layout_below="@+id/btn_single"
            android:layout_alignParentStart="true"
            android:src="@drawable/mpde_challenge"
            android:background="#ffffffff"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_timeLimit"
            android:background="#ffffffff"
            android:src="@drawable/mode_time"
            android:layout_below="@+id/btn_challenge"
            android:layout_alignStart="@+id/btn_challenge"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_tips"
            android:layout_below="@+id/btn_timeLimit"
            android:layout_alignStart="@+id/btn_timeLimit"
            android:src="@drawable/mode_tips"
            android:background="#ffffffff"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
