<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="camp7506.assignment1.cardgame24.Summary">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/icon_achieve"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:layout_marginTop="50dp"
        android:src="@drawable/achieve_1"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7"
        android:layout_alignLeft="@+id/imageView7"
        android:layout_marginLeft="-20dp"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:src="@drawable/achieve_2"
        android:layout_below="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:layout_marginTop="50dp"
        android:src="@drawable/achieve_3"
        android:layout_below="@+id/imageView9"
        android:layout_alignStart="@+id/imageView9"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView11"
        android:src="@drawable/achieve_4"
        android:layout_below="@+id/imageView10"
        android:layout_alignStart="@+id/imageView10"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practise Mode"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8"
        android:textSize="22dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Played: "
        android:id="@+id/textView4"
        android:layout_toEndOf="@+id/imageView8"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="-3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenge Mode"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/imageView9"
        android:layout_alignStart="@+id/textView4"
        android:textSize="22dp"
        android:layout_marginTop="-7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Played: "
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="-3dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Race Mode"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/imageView10"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="-7dp"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Played: "
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_alignStart="@+id/textView7"
        android:textSize="20dp"
        android:layout_marginBottom="-3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/imageView11"
        android:layout_alignStart="@+id/textView8"
        android:textSize="22dp"
        android:layout_marginTop="-7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginBottom="-3dp"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:src="@drawable/btn_sum_reset"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView11"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:src="@drawable/btn_sum_back"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="-20dp"
        android:background="@android:color/transparent" />
</RelativeLayout>
